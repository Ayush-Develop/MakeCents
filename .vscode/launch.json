{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug: API Routes Only",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/next",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/next.cmd"
      },
      "runtimeArgs": ["dev"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "env": {
        "NODE_OPTIONS": "--inspect"
      },
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "Debug: Server Components",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/next",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/next.cmd"
      },
      "runtimeArgs": ["dev"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "env": {
        "NODE_OPTIONS": "--inspect"
      },
      "sourceMaps": true
    },
    {
      "name": "Debug: Attach to Running Server",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "sourceMaps": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}"
    }
  ]
}